<ul {{social_attribute.addClass(social_classes) }}>
  {% if bond.social_profiles.social_facebook is not empty %}
  <li>
    <a href="{{ bond.social_profiles.social_facebook }}" class="facebook" target="_blank">
      <i class="fab fa-facebook-square"></i>
    </a>
  </li>
  {% endif %}

  {% if bond.social_profiles.social_googleplus is not empty %}
  <li>
    <a href="{{ bond.social_profiles.social_googleplus }}" class="google" target="_blank">
      <i class="fab fa-google-plus-square"></i>
    </a>
  </li>
  {% endif %}

  {% if bond.social_profiles.social_linkedin is not empty %}
  <li>
    <a href="{{ bond.social_profiles.social_linkedin }}" class="linkedin" target="_blank">
      <i class="fab fa-linkedin"></i>
    </a>
  </li>
  {% endif %}

  {% if bond.social_profiles.social_twitter is not empty %}
  <li>
    <a href="https://twitter.com/{{ bond.social_profiles.social_twitter }}" class="twitter" target="_blank">
      <i class="fab fa-twitter-square"></i>
    </a>
  </li>
  {% endif %}

  {% if bond.social_profiles.social_youtube is not empty %}
  <li>
    <a href="{{ bond.social_profiles.social_youtube }}" class="youtube" target="_blank">
      <i class="fab fa-youtube-square"></i>
    </a>
  </li>
  {% endif %}

  {% if bond.social_profiles.social_instagram is not empty %}
  <li>
    <a href="{{ bond.social_profiles.social_instagram }}" class="instagram" target="_blank">
      <i class="fab fa-instagram"></i>
    </a>
  </li>
  {% endif %}

  {% if bond.social_profiles.social_github is not empty %}
  <li>
    <a href="{{ bond.social_profiles.social_github }}" class="github" target="_blank">
      <i class="fab fa-github-square"></i>
    </a>
  </li>
  {% endif %}

  {% if bond.social_profiles.social_drupal is not empty %}
  <li>
    <a href="{{ bond.social_profiles.social_drupal }}" class="drupal" target="_blank">
      <i class="fab fa-drupal"></i>
    </a>
  </li>
  {% endif %}


</ul>
